<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photoHeight"
        android:id="@+id/linearLayoutAlbumRow">

        <com.parse.ParseImageView
            android:layout_width="@dimen/photoWidth"
            android:layout_height="@dimen/photoHeight"
            android:id="@+id/imageViewAlbumNotification" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewAlbumNotification"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:id="@+id/imageViewAccept"
            android:src="@drawable/accept"
            android:layout_gravity="center|right"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:id="@+id/imageViewReject"
            android:src="@android:drawable/ic_delete"
            android:layout_gravity="center|right"
            android:layout_marginLeft="10dp" />

    </LinearLayout>
</LinearLayout>