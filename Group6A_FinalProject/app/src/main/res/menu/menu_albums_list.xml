            <item android:id="@+id/myAlbum" android:title="My Albums" android:onClick="myAlbumsOnClick"
                android:orderInCategory="100" app:showAsAction="never" />
            <item android:id="@+id/publicAlbum" android:title="Other Public Albums" android:onClick="publicAlbumsOnClick"
